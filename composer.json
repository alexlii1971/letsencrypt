{
	"name": "imbrish/letsencrypt",
	"homepage": "https://github.com/imbrish/letsencrypt",
    "description": "PHP script for automatic issuing and renewal of Let's Encrypt certificates on shared hostings.",
    "keywords": ["ssl", "certificate", "letsencrypt", "shared hosting"],
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Pawel Dominiak",
            "homepage": "https://github.com/imbrish"
        }
    ],
    "repositories": [
        {
            "url": "https://github.com/kelunik/acme-client.git",
            "type": "git"
        },
        {
            "type": "package",
            "package": {
                "name": "neurobin/sslic",
                "version": "0.0.2",
                "source": {
                    "url": "https://github.com/neurobin/sslic.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "kelunik/acme-client": "*",
        "neurobin/sslic": "*"
    },
    "autoload": {
        "psr-4": {
            "Imbrish\\LetsEncrypt\\": "src"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('config.yml.example', 'config.yml');\""
        ],
        "copy-commands": [
            "php -r \"copy('vendor/kelunik/acme-client/bin/acme', 'bin/acme');\""
        ],
        "post-install-cmd": [
            "@copy-commands"
        ],
        "post-update-cmd": [
            "@copy-commands"
        ]
    }
}
