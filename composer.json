{
	"name": "imbrish/letsencrypt",
    "description": "PHP script for automatic issuing and renewal of Let's Encrypt certificates on shared hostings.",
    "version": "0.0.1",
    "repositories": [
        {
            "url": "https://github.com/kelunik/acme-client.git",
            "type": "git"
        },
        {
            "type": "package",
            "package": {
                "name": "neurobin/sslic",
                "version": "0.0.2",
                "source": {
                    "url": "https://github.com/neurobin/sslic.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "kelunik/acme-client": "*",
        "neurobin/sslic": "*",
		"vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Imbrish\\LetsEncrypt\\": "src"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "copy-commands": [
            "php -r \"copy('vendor/kelunik/acme-client/bin/acme', 'bin/acme');\""
        ],
        "post-install-cmd": [
            "@copy-commands"
        ],
        "post-update-cmd": [
            "@copy-commands"
        ]
    }
}
